<h2 style="margin-top: 70px;">Sign Up</h2>

<!-- we use typeof here to avoid an error since the variable sometimes does not exist -->
<% if (typeof messageForDumbUsers ==="string"){ %>
  <p class="error-message"> <%= messageForDumbUsers %> </p>
<% } %>

<form id="form" method="post" action="/signup" >


  <label for="full-name-input"> Your Name </label>
  <input id="full-name-input" type="text" name="signupFullName" placeholder="Alan Turing">
    <br>

  <label for="username-input"> Username </label>
  <input id="username-input" type="text" name="signupUsername" placeholder="turingator">
  <br>

  <label for="password-input">Password</label>
  <input id="password-input" type="password" name="signupPassword" placeholder="**********">
  <br>

  <button>Sign Up</button>

  <br>
  <br>
  <a href="/auth/facebook">Sign In With Facebook</a>
  <a href="/auth/google">Sign In With Google</a>

</form>
