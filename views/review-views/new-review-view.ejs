<h2 style="margin-top: 70px;"> Add a Review </h2>

<form method="post" action="/reviews" enctype="multipart/form-data">
  <label for="restaurant-name-input">Restaurant Name</label>
  <input id="restaurant-name-input" type="text" name="restaurantName">
  <br>
  <br>

  <label for="restaurant-comments-input">Comments</label>
  <textarea id="restaurant-comments-input" type="text" name="restaurantComments"></textarea>
  <br>
  <br>

  <!-- <label for="restaurant-cuisine-input">Cuisine</label>
  <input id="restaurant-cuisine-input" type="text" name="restaurantCuisine"> -->
  <label>
    <span>Cuisine :  </span><select name="restaurantCuisine">
      <option>Mexican</option>
      <option>Indonesian</option>
      <option>Chinese</option>
      <option>Italian</option>
      <option>Spanish</option>
      <option>French</option>
      <option>Japanese</option>
      <option>Turkish</option>
      <option>Indian</option>
      <option>Thai</option>
    </select>
  </label>
  <br>
  <br>


  <label for="restaurant-rating-input">Rating</label>
  <!-- <input id="restaurant-rating-input" type="number" name="restaurantRating"> -->

  <fieldset class="rating">
    <input type="radio" id="star5" name="restaurantRating" value="5" /><label class = "full" for="star5" title="Awesome - 5 stars" name="restaurantRating"></label>
    <input type="radio" id="star4" name="restaurantRating" value="4" /><label class = "full" for="star4" title="Pretty good - 4 stars" name="restaurantRating"></label>
    <input type="radio" id="star3" name="restaurantRating" value="3" /><label class = "full" for="star3" title="Meh - 3 stars" name="restaurantRating"></label>
    <input type="radio" id="star2" name="restaurantRating" value="2" /><label class = "full" for="star2" title="Kinda bad - 2 stars" name="restaurantRating"></label>
    <input type="radio" id="star1" name="restaurantRating" value="1" /><label class = "full" for="star1" title="Sucks big time - 1 star" name="restaurantRating"></label>
  </fieldset>
  <br>
  <br>

  <label for="restaurant-photo-url"> Photo Upload </label>
  <input  id="restaurant-photo-url" type="file" name="restaurantPhoto">
  <br>
  <br>

  <button type="submit"> Save This Review </button>
</form>
