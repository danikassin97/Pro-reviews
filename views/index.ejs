<link rel="stylesheet" href="/stylesheets/carousel.css">

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 1600px; position: relative; right: 300px; bottom: 50px;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img class="first-slide" src="/images/food1.png" alt="First slide" style="height: 1000px;">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="top-pic"><p class="home-writing nice-title header">Welcome to <%= title %> </p><h1>
        </div>
      </div>
    </div>
    <div class="item">
      <img class="second-slide" src="/images/food2.png" alt="Second slide" style="height: 1000px;">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="top-pic"><p class="home-writing nice-title header">Welcome to <%= title %> </p><h1>
        </div>
      </div>
    </div>
    <div class="item">
      <img class="third-slide" src="/images/food3.png" alt="Third slide" style="height: 1000px;">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="top-pic"><p class="home-writing nice-title header">Welcome to <%= title %> </p><h1>
      </div>
    </div>
  </div>
</div>
</div>
</div>

<div style="margin-top: 200px;">

<% if (typeof currentUser === 'object') { %>

  <% if ( currentUser.city === "Miami"){ %>

<div style="margin-bottom: 60px; margin-left: 150px;">
  <h3> Hello, <%= currentUser.username %>. </h3>
  <h2>Here Are Some Restaurants Near You!</h2>

  <hr style="border: 1px solid;
 border-color: black; width: 1100px; position: relative; right: 95px;">
</div>

<div class="container marketing">

     <!-- Three columns of text below the carousel -->
     <div class="row">
       <% restaurants.forEach((oneResto) => { %>
         <% if (oneResto.city === "Miami") { %>
           <div class="col-lg-4" style="margin-top: 20px">
             <img class="img-circle" src="<%= oneResto.image_url %>" alt="Generic placeholder image" width="140" height="140" style="position: relative; right: 20px;">
             <h2 style="margin-top: 300px"><%= oneResto.name %></h2>
             <p><%= oneResto.address %></p>
             <p><%= oneResto.city %></p>
             <% if (restaurants.price === 1) { %>
               <p class="move">Price: <i> $ </i></p>
             <% } else if (restaurants.price === 2) { %>
               <p class="move">Price: <i> $$ </i></p>
             <% } else if (restaurants.price === 3) { %>
